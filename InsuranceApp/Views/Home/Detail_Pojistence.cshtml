@{
	ViewData["Title"] = "Add new insurance";
}

<div class="bg-light p-4 rounded table-responsive-md text-nowrap">
	<div class="clearfix">
		<img src="~/images/user.png" alt="klient" width="200" height="200">

		<table class="w-50 table table-borderless">
			<thead>
				<tr>
					<th>Jakub Šanda</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Mičovice 7</td>
					<td>jakub.sanda@yahoo.com</td>
				</tr>
				<tr>
					<td>Prachatice 383 01</td>
					<td>+420 735 097 999</td>
				</tr>
		</table>

	</div>

	<br />
	<h3>Sjednaná pojištění</h3>
	<table id="table-main" class="table table-bordered border-dark mb-5 table-striped table-responsive">
		<thead class="table-secondary table-bordered border-dark">
			<tr>
				<th>Pojištění</th>
				<th>Limit plnění</th>
				<th>Možnosti</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><a asp-area="" asp-controller="Home" asp-action="Pojisteni">Pojištění majetku</a></td>
				<td>100.000.000 Kč</td>
				<td>
					<a id="moznosti" class="btn mx-2 btn-sm btn-log btn-outline-warning" asp-area="" asp-controller="Home" asp-action="Upraveni_Pojisteni">Upravit</a>
					<button type="button" id="moznosti" class="btn btn-sm mx-3 my-2 btn-log btn-outline-danger" data-bs-toggle="modal" data-bs-target="#myModal">Odstranit</button>
				</td>
				<!-- Modal -->
				<div class="modal fade" id="myModal">
					<div class="modal-dialog modal-dialog-centered">
						<div class="modal-content">

							<!-- Modal Header -->
							<div class="modal-header text-center">
								<h4 class="modal-title">Odstranění pojištění</h4>
								<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
							</div>

							<!-- Modal body -->
							<div class="modal-body text-center">
								Chystáte se odstranit aktuální pojištění. <br />
								Jste si jisti, že chcete pokračovat?
							</div>

							<!-- Modal footer -->
							<div class="modal-footer">
								<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ne</button>
								<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Ano</button>
							</div>

						</div>
					</div>
				</div>

			</tr>
		</tbody>
	</table>

	<div class="text-center">
		<a class="btn mx-1 btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Pridani_Pojisteni">Přidat pojištění</a>
		<a class="btn mx-1 btn-outline-warning" asp-area="" asp-controller="Home" asp-action="Upraveni_Pojistence">Upravit pojištěnce</a>
		<button type="button" class="btn mx-1 btn-outline-danger" data-bs-toggle="modal" data-bs-target="#myModalpoj">Odstranit pojištěnce</button>
		<!-- Modal -->
		<div class="modal fade" id="myModalpoj">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">

					<!-- Modal Header -->
					<div class="modal-header text-center">
						<h4 class="modal-title">Odstranění pojištěnce</h4>
						<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
					</div>

					<!-- Modal body -->
					<div class="modal-body text-center">
						Chystáte se odstranit aktuálního pojištěnce. <br />
						Jste si jisti, že chcete pokračovat?
					</div>

					<!-- Modal footer -->
					<div class="modal-footer">
						<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ne</button>
						<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Ano</button>
					</div>

				</div>

			</div>
		</div>
	</div>
</div>