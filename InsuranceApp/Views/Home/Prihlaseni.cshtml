@{
	ViewData["Title"] = "Log-in";
}


<div class="bg-light p-5 row justify-content-center align-items-center rounded">

	<form id="prihlaseni">
		<h1 class="h3 fw-normal">Přihlášení</h1>

		<div class="form-floating">
			<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
			<label for="floatingInput">Email</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control" id="floatingPassword" placeholder="Password">
			<label for="floatingPassword">Heslo</label>
		</div>

		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" value="remember-me"> Zapamatovat si mě
			</label>
		</div>
		<button class="w-100 btn btn-lg btn-primary" type="submit">Přihlásit</button>
	</form>

</div>
