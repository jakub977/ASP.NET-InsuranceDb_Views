<!DOCTYPE html>
<html lang="cs-cz">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - InsuranceApp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/styl.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/InsuranceApp.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InsuranceApp</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Pojištěnci</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white active" asp-area="" asp-controller="Home" asp-action="Pojisteni">Pojištění</a>
						</li>
					</ul>
					<a class="btn mx-3 btn-outline-success" asp-area="" asp-controller="Home" asp-action="Prihlaseni">Přihlásit</a>
					<a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Registrace">Registrovat</a>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer bg-secondary">
		<p class="text-center text-white pb-0"><br />Created by &copy;Jakub Šanda 2022</p>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
